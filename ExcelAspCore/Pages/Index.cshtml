@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="mt-3 mb-5 col-sm-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            year
                        </th>
                        <th>
                            phone
                        </th>
                        <th>
                            email
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stud in Model.Students)
                    {
                        <tr>
                            <td>
                                @stud.YearOfStudy
                            </td>
                            <td>
                                @stud.PhoneNo
                            </td>
                            <td>
                                @stud.Email
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>

        <div class="row">



            <div class="col-md-4">
                <input type="file" asp-for="formFile" class="form-control" />
            </div>
            <div class="col-md-3">
                <input type="submit" name="Upload" asp-page-handler="ImportExcel" value="Upload" id="btnupload" class="btn btn-primary" />
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <div class="row">
            <div id="divPrint"></div>

        </div>
    </div>

</form>

<input type="hidden" id="hiddenExcelUrl" value="@Url.Action("Import", "Home")" />

